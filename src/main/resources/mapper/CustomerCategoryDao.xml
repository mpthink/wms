<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.think.wms.dao.CustomerCategoryDao">    
    
    
    <insert id="insertCustomerCategory">
    	insert into
    		wms_customer_category(customer_category_name)
    	values(#{customerCategoryName})
    </insert>
    
	<delete id="deleteCustomerCategory">
		delete
			from wms_customer_category
		where
			customer_category_id=#{customerCategoryId}
	</delete>
    
    <update id="updateCustomerCategory">
    	update
    		wms_customer_category
    	<trim prefix="set" suffixOverrides=",">
    		<if test="customerCategoryName != null">customer_category_name=#{customerCategoryName}</if>
    	</trim>
    	where 
    		customer_category_id=#{customerCategoryId}
    </update>

	<select id="queryById" resultType="CustomerCategory" parameterType="int">
        select 
			customer_category_id,customer_category_name
        from 
        	wms_customer_category
        where
        	customer_category_id=#{customerCategoryId}
    </select>

	<select id="queryAll" resultType="CustomerCategory">
        select 
			customer_category_id,customer_category_name
        from 
        	wms_customer_category
    </select>
</mapper>