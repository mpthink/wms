<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.think.wms.dao.RoleDao">
	<!-- 目的:为DAO接口方法提供sql语句配置 -->
	<sql id="roleSelectFiled">
		id,name,role_code,description
	</sql>

	<insert id="addRole">
		insert into
		wms_role(name,role_code,description)
		values(#{name},#{roleCode},#{description})
	</insert>


	<delete id="deleteRoleById">
		delete
		from wms_role
		where
		id=#{id}
	</delete>

	<update id="updateRole">
		update
		wms_role
		<trim prefix="set" suffixOverrides=",">
			<if test="name != null">name=#{name},</if>
			<if test="roleCode != null">role_code=#{"roleCode != null"},</if>
			<if test="description != null">description=#{description},</if>
		</trim>
		where
		id=#{id}
	</update>
	
	<select id="findById" resultType="Role" parameterType="int">
		select
		<include refid="roleSelectFiled" />
		from
		wms_role role
		where
		role.id=#{id}
	</select>

	<select id="findAll" resultType="Role">
		select
		<include refid="roleSelectFiled" />
		from
		wms_role
	</select>
</mapper>